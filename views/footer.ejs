<!-- Github login modal -->
		<section class="semantic-content" id="login-confirm"
				tabindex="-1" role="dialog" aria-labelledby="login-confirm" aria-hidden="true">

			<div class="modal-inner">
				<header>
					<h2 id="modal-label"><i class="fa fa-github"></i> Github Login</h2>
				</header>

				<div class="modal-content pure-g-r">
					<%  if(typeof(user) == 'object' && user != null){  %>
        				<p  class="pure-u-1">Currently logged into github as <%= user.displayName %></p>
						<a href="/logout?last=<%= name %>" class="pure-button pure-button-error pure-u-1-3">Log out from github</a> 
    				<% } else { %>
						<h2 class="pure-u-1">Share your design approach</h2>
					<div class="pure-u-1">
						<a href="/auth/github?last=<%= name %>" class="login-with-github pure-button pure-button-primary"><i class="fa fa-github"></i> Login</a>				<a href="/#!" class="nevermind">Cancel</a>		</div>
					
					<p class="pure-u-1">Use your GitHub account to share how you use HTTP for API design. You'll be taken to the GitHub website to authenticate or confirm if you're already logged in.</p>
						
    				<% } %>
						
				</div>

				<footer>
					<p class="fineprint">We only save your name and GitHub ID so we can keep track your survey responses on API Atlas. We won't keep or sell any type of sensitive information or spam you in any way.</p>
				</footer>
			</div>

			<!-- Use Hash-Bang to maintain scroll position when closing modal -->
			<a href="#!" class="modal-close" title="Close"
					data-dismiss="modal">&times;</a>
		</section>

<!-- A modal with its content -->
		<section class="semantic-content" id="mobile_menu"
				tabindex="-1" role="dialog" aria-labelledby="menu-pane" aria-hidden="true">

			<div class="modal-inner">
				<header>
					<h2 id="menu-pane">API Atlas</h2>
				</header>
				
				<div class="modal-content pure-menu pure-menu-open">
					<ul>
						<li>
						<%  if(typeof(user) == 'object' && user != null){  %>
							<a href="/logout?last=<%= name %>" class="pure-button pure-button-error">Log out</a> 
    					<% } else { %>
							<a href="/auth/github?last=<%= name %>" class="login-with-github pure-button pure-button-primary"><i class="fa fa-github"></i> Login</a>
    					<% } %>
						</li>
					</ul>	
				</div>
				
				<footer>
					<p>Have feedback? <a href="https://github.com/apicraft/apiatlas/issues">Open an issue on github.</a></p>
				</footer>
			</div>

			<!-- Use Hash-Bang to maintain scroll position when closing modal -->
			<a href="#!" class="modal-close" title="Close"
					data-dismiss="modal">Close</a>
		</section>


